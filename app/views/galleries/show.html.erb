<% provide(:title, "Show Image |")%>
<%= render "layouts/navbar_admin" %> 
<section>
  <div class="container">

    <div class="row"> 
    	<div class="col s12 m2"></div>
        <div class="col s12 m8">
    	  <h4>Showing Image</h4>
          <div class="card">  
  			  <span class="card-title" style="padding: 13px;"><%= @gallery.caption %></span>
	          <div class="card-image">
	  			<%= image_tag @gallery.image.url(:large) %>
	          </div>
              <div class="card-action">
				<%= link_to 'Edit', edit_gallery_path(@gallery) %>
				<%= link_to 'Back', galleries_path %>
              </div>
          </div>
        </div> 
    	<div class="col s12 m2"></div>
    </div>  
  </div>
</section> 
 