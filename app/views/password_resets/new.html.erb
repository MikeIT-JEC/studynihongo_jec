<div class="container">
	<div class="row">
		<div class="col s3"></div>
		<div class="col s6">
			<h1>Reset Password</h1>

			<%= form_tag password_resets_path, :method => :post do %>
			  <div class="field">
			    <%= label_tag :email %>
			    <%= text_field_tag :email, params[:email] %>
			  </div>
			  <div class="actions center	"><%= submit_tag "Reset Password", class: "waves-effect btn blue" %></div>
			<% end %>
			
		</div>
		<div class="col s3"></div>
	</div>
</div>