<% provide(:title, "Inquiry |")%>
<%= render "layouts/navbar_user" %> 

<div class="section">
  <div class="container">
        <h4 class="center-align"><strong class="blue-text text-darken-5">INQUIRY</strong></h4>
    <div class="row">
      <div class="col s4">
        <%= image_tag("inquiry-cartoon.jpg", :alt => "Study Nihongo", :class => "responsive-img") %> 
      </div>
      <div class="col s8">
        <%= form_for @inquiry do |f| %>  
          <div class="row">
            <div class="input-field col s12">
              <%= f.label(:name, "Fullname")%>
              <%= f.text_field(:name, required: true) %>
            </div>
          </div> 
          <div class="row">
            <div class="input-field col s12">
              <%= f.label(:email, "Email Address")%>
              <%= f.email_field(:email, required: true) %> 
            </div>
          </div> 
          <div class="row">
            <div class="input-field col s12"> 
              <%= f.label(:contactnumber, "Contact Number")%>
              <%= f.text_field(:contactnumber, required: true) %>
            </div>
          </div> 
          <div class="row">
            <div class="input-field col s12"> 
              <%= f.label(:inquiry, "Your Inquiry")%>
              <%= f.text_area(:inquiry, class: "materialize-textarea") %>
            </div>
          </div> 
              <%= f.submit "Submit Inquiry", class: "waves-effect btn blue right" %>
        <% end %> 
      </div>
    </div>
  </div>
</div>

<%= render "layouts/footer_user" %> 