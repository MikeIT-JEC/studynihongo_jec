<div class="container">
	<div class="row">

			<%= render "partials/notification" %>
			
		<div class="col s4"></div>
		<div class="col s4">
			<h3 class="center">Log in</h3>
			
			<%= form_tag sessions_path do %>
			  <p>
			    <%= label_tag :email %><br />
			    <%= text_field_tag :email, params[:email] %>
			  </p>
			  <p>
			    <%= label_tag :password %><br />
			    <%= password_field_tag :password%>
			  </p>  
			  <p class="waves-effect waves-light btn"><%= submit_tag "Log in" %></p> 
			<% end %>
			<p>
				<%= link_to "Forgotten Password?", new_password_reset_path %>
			</p>
		</div>
		<div class="col s4"></div>
	</div>
</div>